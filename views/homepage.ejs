<title>Login Homepage</title>
<div ng-app='homepage'>
	<div ng-controller='loginController as login'>
		<button ng-click='login.signUpDisplay=true' class='btn btn-default'>Sign Up</button>
		<button ng-click='login.signUpDisplay=false' class='btn btn-default'>Log In</button>
		<form ng-show='login.signUpDisplay' ng-submit='login.signUp()'>
			<div class='form-group has-success'>
				<label>Name</label>
				<input type='text' ng-model='login.signUpName' class='form-control' placeholder='e.g. Nikola Tesla' required></input>	
			</div>
			<div ng-class="{'has-error': (login.signUpEmail.$dirty && login.signUpEmail.$invalid)}">
				<label>Email Address</label>
				<input type='email' ng-model='login.signUpEmail' class='form-control' placeholder='e.g. foo@boo.com' required></input>	
			</div>
			<div class='form-group has warning'>
				<label>Your Password</label>
				<input type='text' ng-model='login.signUpPw' class='form-control' required></input>			
			</div>
			<div class='form-group'>
				<label>Repeat Password</label>
				<input type='text' ng-model='login.signUpRepeatPw' class='form-control' required></input>
			</div>
			<input type='submit' class='btn btn-default'></input>
		</form>	
		<form ng-hide='login.signUpDisplay === true' ng-submit='login.login()'>
			<label>Email Address</label>
			<input type='text' ng-model='login.loginEmail' placeholder='e.g. foo@boo.com' name='email' required></input>
			<label>Your Password</label>	
			<input type='text' ng-model='login.loginPw' required></input>
			<input type='submit' class='btn btn-default'></input>
		</form>
		<button ng-click='login.amIAuthenticated()' class='btn btn-default'>authenticated?</button>
	</div>
</div>
